<div class="form-data">
    <form action="/subscribers/create" method="POST">
        <label for="txtFirstName">First Name</label>
        <input type="text" name="firstName" id="txtFirstName" placeholder="First" autofocus required><br>

        <label for="txtLastName">Last Name</label>
        <input type="text" name="lastName" id="txtLastName" placeholder="Last" required><br>

        <label for="txtEmail">Email Address</label>
        <input type="email" name="email" id="txtEmail" placeholder="email" required><br>

        <label for="txtZipCode">Zip Code</label>
        <input type="text" name="zipCode" id="txtZipCode" placeholder="zip code" required><br>

        <button type="submit">Create</button>
    </form>
</div>